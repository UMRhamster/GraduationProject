<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="播放速度"
        android:textColor="#bfbfbf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/player_speed_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_tb_top"
        android:checkedButton="@+id/player_speed_rb_1_0"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <RadioButton
            android:id="@+id/player_speed_rb_0_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="0.5"
            android:textColor="@color/tv_speed_selector" />

        <RadioButton
            android:id="@+id/player_speed_rb_0_75"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="0.75"
            android:textColor="@color/tv_speed_selector" />

        <RadioButton
            android:id="@+id/player_speed_rb_1_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="1.0"
            android:textColor="@color/tv_speed_selector" />
        <RadioButton
            android:id="@+id/player_speed_rb_1_25"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="1.25"
            android:textColor="@color/tv_speed_selector" />
        <RadioButton
            android:id="@+id/player_speed_rb_1_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="1.5"
            android:textColor="@color/tv_speed_selector" />
        <RadioButton
            android:id="@+id/player_speed_rb_2_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="2.0"
            android:textColor="@color/tv_speed_selector" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>