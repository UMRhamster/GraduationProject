<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/fg_collection_tb_top"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:background="@color/themeColor"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/fg_collection_iv_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="14dp"
                android:src="@drawable/history_menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fg_collection_iv_menu"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fg_collection_rv"
        android:layout_below="@id/fg_collection_tb_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>