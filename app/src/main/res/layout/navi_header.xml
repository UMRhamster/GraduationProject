<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/bgbg"
        android:layout_alignBottom="@+id/navi_header_tv_type"/>
    <!--<com.whut.umrhamster.graduationproject.view.CircleImageView-->
        <!--android:layout_width="72dp"-->
        <!--android:layout_height="72dp"-->
        <!--android:src="@color/defaultGrey"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginTop="16dp" />-->

    <com.whut.umrhamster.graduationproject.view.CircleImageView
        android:id="@+id/navi_header_civ_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/icon_user_blackwidow"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/navi_header_icon_bg"/>
    <TextView
        android:id="@+id/navi_header_tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_tip"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/navi_header_civ_icon"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/navi_header_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_study_time"
        android:visibility="invisible"
        android:layout_below="@id/navi_header_tv_nickname"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="16dp"/>

</RelativeLayout>