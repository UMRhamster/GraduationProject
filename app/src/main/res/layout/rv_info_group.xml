<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/rv_info_group_iv_arr"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:padding="14dp"
        android:src="@drawable/expan_arr_right"/>
    <TextView
        android:id="@+id/rv_info_group_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rv_info_group_iv_arr"
        android:text="大学物理"/>
    <TextView
        android:id="@+id/rv_info_group_tv_totaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/rv_info_group_v_decor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dbdbdb"
        android:layout_alignStart="@id/rv_info_group_tv_title"
        android:layout_alignBottom="@id/rv_info_group_iv_arr"/>

</RelativeLayout>