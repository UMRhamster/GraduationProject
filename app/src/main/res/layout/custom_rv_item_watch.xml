<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.whut.umrhamster.graduationproject.view.CircleImageView
        android:id="@+id/rv_item_watch_civ_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/test_itembg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rv_item_watch_tv_watch"
        app:layout_constraintStart_toEndOf="@id/rv_item_watch_civ_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rv_item_watch_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张老何"
            android:textColor="@color/themeColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rv_item_watch_tv_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="大爱的阿萨德发的多个很高黑寡第三方士大夫士大夫十大歌手风神股份是发送给妇很反感好"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rv_item_watch_tv_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_round_bg_color_light_gray"
        android:text="已关注"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>