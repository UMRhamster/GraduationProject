<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_interact_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/player_interact_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">
            <com.whut.umrhamster.graduationproject.view.CircleImageView
                android:id="@+id/player_interact_tb_civ_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/test_itembg"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/player_interact_tb_civ_icon"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/player_interact_tb_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张老师"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/player_interact_tb_tv_nof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/player_interact_tb_tv_nickname"
                    android:layout_below="@id/player_interact_tb_tv_nickname"
                    android:textSize="12sp"
                    android:text="观看人数:1.5万"/>
                <TextView
                    android:id="@+id/player_interact_tb_tv_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/player_interact_tb_tv_nof"
                    android:layout_alignTop="@id/player_interact_tb_tv_nof"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:text="学员:10万"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/player_interact_tv_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/text_round_bg_color_theme"
                android:textColor="@android:color/white"
                android:text="+ 关注"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/player_interact_rv"
        android:layout_width="match_parent"
        android:layout_below="@id/player_interact_tb"
        android:layout_above="@+id/player_interact_ll"
        android:background="#eeeeee"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/player_interact_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:layout_alignParentBottom="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player_interact_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/player_interact_et_bg"
                android:hint="发个弹幕呗~"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/player_interact_iv_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/player_interact_iv_send"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_marginEnd="8dp"
                android:src="@drawable/send_message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>