<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/custom_rv_item_history_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/custom_rv_item_history_rl_riv_cover"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@mipmap/test_itm_bright"
                app:riv_corner_radius="3dp"/>
            <ProgressBar
                android:id="@+id/custom_rv_item_history_rl_pb"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="50"
                android:layout_alignStart="@id/custom_rv_item_history_rl_riv_cover"
                android:layout_alignEnd="@id/custom_rv_item_history_rl_riv_cover"
                android:layout_alignBottom="@id/custom_rv_item_history_rl_riv_cover"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:progressDrawable="@drawable/custom_progress_history"/>
            <View
                android:id="@+id/custom_rv_item_history_rl_v_bg"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignEnd="@id/custom_rv_item_history_rl_pb"
                android:layout_alignBottom="@+id/custom_rv_item_history_rl_tv_time"
                android:background="@drawable/gradient_bg_on_cover"/>
            <TextView
                android:id="@+id/custom_rv_item_history_rl_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36:51/108:40"
                android:paddingEnd="4dp"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:layout_alignEnd="@id/custom_rv_item_history_rl_pb"
                android:layout_above="@id/custom_rv_item_history_rl_pb"/>
            <TextView
                android:id="@+id/custom_rv_item_history_rl_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/custom_rv_item_history_rl_pb"
                android:text="未开播"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:padding="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_rv_item_history_status_bg"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_toEndOf="@id/custom_rv_item_history_rl"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/custom_rv_item_history_rl_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我，来了，倒了我，来了，倒了我，来了，倒了我，来了，倒了我，来了，倒了我，来了，倒了"
                android:lines="2"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/custom_rv_item_history_rl_tv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="师"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_rv_item_history_tv_bg"
                    android:textSize="9sp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/custom_rv_item_history_rl_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张老师"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:textSize="11sp"
                    android:ellipsize="end"/>

            </LinearLayout>
            <TextView
                android:id="@+id/custom_rv_item_history_rl_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="今天 10:44"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>